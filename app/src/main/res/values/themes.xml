        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="bottomNavigationStyle">@style/Widget.JobSearch.BottomNavigationView</item>
        <item name="badgeStyle">@style/Widget.JobSearch.Badge</item>
    </style>

    <style name="Widget.JobSearch.BottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.JobSearch.BottomNavigationView</item>
        <item name="itemBackground">@color/black</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="ThemeOverlay.JobSearch.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/gray_4</item>
    </style>

    <style name="Widget.JobSearch.Badge" parent="@style/Widget.MaterialComponents.Badge">
        <item name="backgroundColor">@color/red</item>
        <item name="badgeTextAppearance">@style/number</item>
    </style>

    <style name="Widget.JobSearch.Button1" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@drawable/selector_button_blue_bg</item>
        <item name="android:textAppearance">@style/button_text_1</item>
        <item name="android:textColor">@drawable/selector_button_fg</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.JobSearch.Button2" parent="@style/Widget.Material3.Button">
        <item name="backgroundTint">@drawable/selector_button_green_bg</item>
        <item name="android:textAppearance">@style/button_text_2</item>
        <item name="android:textColor">@drawable/selector_button_fg</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <style name="Widget.JobSearch.Button3" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@drawable/selector_button_blue_bg</item>
        <item name="android:textAppearance">@style/button_text_2</item>
        <item name="android:textColor">@drawable/selector_button_fg</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.JobSearch.ImageButton" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>